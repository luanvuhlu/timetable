<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigbear.timetable"
    android:versionCode="2"
    android:versionName="2.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:maxSdkVersion="19"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bigbear.timetable.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings">
            <intent-filter>
                <action android:name="com.bigbear.timetable.SettingsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FileExploder"
            android:label="File Chooser">
            <intent-filter>
                <action android:name="com.bigbear.timetable.FileExploder" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentList"
            android:label="@string/studentList">
            <intent-filter>
                <action android:name="com.bigbear.timetable.StudentList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about">
            <intent-filter>
                <action android:name="com.bigbear.timetable.About" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountSettings"
            android:label="@string/displaySettings">
            <intent-filter>
                <action android:name="com.bigbear.timetable.AccountSettings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubjectListActivity"
            android:label="@string/subjectList">
            <intent-filter>
                <action android:name="com.bigbear.timetable.SubjectListActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
